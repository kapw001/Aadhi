<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_eight"
    android:paddingRight="@dimen/padding_eight">

    <ImageView
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/padding_eight"
        app:srcCompat="@drawable/ic_video_icon" />

    <com.app.aadhi.common.customtextview.LatoRegularTextview
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_eight"
        android:gravity="center"
        android:text="@string/video_message"
        android:textColor="@color/black" />

</LinearLayout>